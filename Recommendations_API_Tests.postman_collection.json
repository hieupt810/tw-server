{
  "info": {
    "name": "Da Nang Travel Recommendations API",
    "description": "Test collection for the travel recommendation system",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "test_place_id",
      "value": "4:0b4c2f30-60c3-48d8-b921-10ce3041ffe4:682",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login to get JWT token for testing"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Setup User Preferences",
      "item": [
        {
          "name": "Add Place to Favorites",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"place_id\": \"{{test_place_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/favourites/",
              "host": ["{{base_url}}"],
              "path": ["api", "favourites", ""]
            },
            "description": "Add a place to user's favorites to build preferences"
          },
          "response": []
        },
        {
          "name": "Create Review for Place",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"review\": \"Amazing cooking class! Learned so much about Vietnamese cuisine and culture. Highly recommend to anyone visiting Da Nang.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reviews/{{test_place_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews", "{{test_place_id}}"]
            },
            "description": "Create a review to build user rating preferences"
          },
          "response": []
        },
        {
          "name": "Get User Favorites",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/favourites/",
              "host": ["{{base_url}}"],
              "path": ["api", "favourites", ""]
            },
            "description": "View current user favorites"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Recommendation Endpoints",
      "item": [
        {
          "name": "Get General Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""]
            },
            "description": "Get personalized recommendations for all place types"
          },
          "response": []
        },
        {
          "name": "Get Things-to-Do Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?place_type=things-to-do&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "place_type",
                  "value": "things-to-do"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get recommendations specifically for things to do"
          },
          "response": []
        },
        {
          "name": "Get Hotel Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?place_type=hotels&limit=5&min_rating=4.0",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "place_type",
                  "value": "hotels"
                },
                {
                  "key": "limit",
                  "value": "5"
                },
                {
                  "key": "min_rating",
                  "value": "4.0"
                }
              ]
            },
            "description": "Get hotel recommendations with minimum rating filter"
          },
          "response": []
        },
        {
          "name": "Get Restaurant Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?place_type=restaurants&limit=8&min_rating=3.5",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "place_type",
                  "value": "restaurants"
                },
                {
                  "key": "limit",
                  "value": "8"
                },
                {
                  "key": "min_rating",
                  "value": "3.5"
                }
              ]
            },
            "description": "Get restaurant recommendations with rating filter"
          },
          "response": []
        },
        {
          "name": "Get Nearby Recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?user_lat=16.030218&user_lng=108.22827&max_distance_km=5&limit=15",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "user_lat",
                  "value": "16.030218"
                },
                {
                  "key": "user_lng",
                  "value": "108.22827"
                },
                {
                  "key": "max_distance_km",
                  "value": "5"
                },
                {
                  "key": "limit",
                  "value": "15"
                }
              ]
            },
            "description": "Get recommendations within 5km of a specific location (Da Nang center)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Recommendation Management",
      "item": [
        {
          "name": "Get User Preference Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", "stats"]
            },
            "description": "Get detailed user preference analysis and recommendation strategy info"
          },
          "response": []
        },
        {
          "name": "Refresh Recommendations Cache",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/refresh",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", "refresh"]
            },
            "description": "Clear cached recommendations to force fresh computation"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Test Scenarios",
      "item": [
        {
          "name": "New User - No Preferences",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?limit=5",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            },
            "description": "Test recommendations for a new user with no favorites or reviews (should return popular places)"
          },
          "response": []
        },
        {
          "name": "Add Multiple Favorites",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"place_id\": \"ANOTHER_PLACE_ID\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/favourites/",
              "host": ["{{base_url}}"],
              "path": ["api", "favourites", ""]
            },
            "description": "Add another place to favorites to test hybrid recommendations"
          },
          "response": []
        },
        {
          "name": "Invalid Parameters Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?place_type=invalid&limit=100&min_rating=10",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "place_type",
                  "value": "invalid"
                },
                {
                  "key": "limit",
                  "value": "100"
                },
                {
                  "key": "min_rating",
                  "value": "10"
                }
              ]
            },
            "description": "Test parameter validation (should return 400 with validation errors)"
          },
          "response": []
        },
        {
          "name": "Unauthorized Request",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""]
            },
            "description": "Test without JWT token (should return 401 Unauthorized)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Performance Testing",
      "item": [
        {
          "name": "Large Result Set",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?limit=50",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            },
            "description": "Test maximum recommendation limit (50 places)"
          },
          "response": []
        },
        {
          "name": "Cache Performance Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/recommendations/?place_type=things-to-do&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "recommendations", ""],
              "query": [
                {
                  "key": "place_type",
                  "value": "things-to-do"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Run this multiple times to test caching (first call should be slower, subsequent calls faster)"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Set dynamic variables if needed",
          "console.log('Testing Da Nang Travel Recommendations API');"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Basic response tests",
          "pm.test('Status code is successful', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});",
          "",
          "pm.test('Response time is acceptable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "if (pm.response.code === 200) {",
          "    pm.test('Response has valid JSON', function () {",
          "        pm.response.to.have.jsonBody();",
          "    });",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
} 